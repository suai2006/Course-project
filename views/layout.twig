<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="initial-scale=1, minimum-scale=1, width=device-width" name="viewport">
    <meta name="robots" content="all,follow">
    <title>Система управления &mdash; {{title}}</title>
    <link rel="icon" href="images/maintop.png" sizes="32x32">
  	<link rel="stylesheet" href="vendors/fomantic-ui/semantic.min.css">
  	<link rel="stylesheet" href="css/main.css">
    {% block head %}{% endblock %}
  </head>
  <body>
    <div class="ui grid">
		<div class="row">
			<div class="ui grid">
				<!-- BEGIN NAVBAR -->
				<!-- computer only navbar -->
				<div class="computer only row">
					<div class="column">
						<div class="ui top fixed menu navcolor">
							<div class="item">
								<img src="images/maintop.png" alt="SimpleIU">
							</div>
							<div class="left menu">
								<div class="nav item">
									<strong class="navtext">Система управления</strong>
								</div>
							</div>
							<div class="ui top pointing dropdown admindropdown link item right">
								<img class="imgrad" src="images/user.jfif" alt="">
								<span class="clear navtext"><strong>Привет, Юзернэйм</strong></span>
								<i class="dropdown icon navtext"></i>
								<div class="menu">
									<div class="item"><p><i class="settings icon"></i>Account Setting</p></div>
									<a href="/auth/logout" class="item"><i class="sign out alternate icon"></i> Выход</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- end computer only navbar -->
				<!-- mobile and tablet only navbar -->
				<div class="tablet mobile only row">
					<div class="column">
					<div class="ui top fixed menu navcolor">
						<a id="showmobiletabletsidebar" class="item navtext"><i class="content icon"></i></a>
						<div class="right menu">
							<div class="item">
								<strong class="navtext">Система управления</strong>
							</div>
							<div class="item">
								<img src="images/logo.png">
							</div>
						</div>
					</div>
					</div>
				</div>
				<!-- end mobile and tablet only navbar -->
				<!-- END NAVBAR -->

				<!-- BEGIN SIDEBAR -->
				<!-- mobile and tablet only sidebar -->
				<div class="tablet mobile only row">
					<div id="mobiletabletsidebar" class="mobiletabletsidebar animate hidden">
						<div class="ui left fixed vertical menu scrollable">
							<div class="item">
								<table>
									<tr>
										<td>
											<img class="ui mini image" src="images/nain.png">
										</td>
										<td>
											<span class="clear"><strong>Меню</strong></span>
										</td>
									</tr>
								</table>
							</div>
							<a class="item" href="/"><i class="home icon"></i> Информация о системе</a>
							<a class="item" href="/stat"><i class="table icon"></i> Статистика</a>
              				<a class="item" href="/objectmap"><i class="home icon"></i> Карта объекта</a>
							<a href="/auth/logout" class="item"><i class="sign out alternate icon"></i> Выход</a>
							<div class="item" id="hidemobiletabletsidebar">
								<button class="fluid ui button">
									Close
								</button>
							</div>
						</div>
					</div>
				</div>
				<!-- end mobile and tablet only sidebar -->
				<!-- computer only sidebar -->
				<div class="computer only row">
					<div class="left floated three wide computer column" id="computersidebar">
						<div class="ui vertical fluid menu scrollable" id="simplefluid">
							<div class="clearsidebar"></div>
							<div class="item">
								<img src="images/main.png" id="sidebar-image">
							</div>
							<a class="item" href="/"><i class="home icon"></i> Иноформация о системе</a>
							<a class="item" href="/stat"><i class="table icon"></i> Статистика</a>
             				 <a class="item" href="/objectmap"><i class="home icon"></i> Карта объекта</a>
							<a class="item"></a>
						</div>
					</div>
				</div>
				<!-- end computer only sidebar -->
				<!-- END SIDEBAR -->
			</div>
		</div>		
    	{% block body %}{% endblock %}
	</div>    
  </body>
	<script>
		document.querySelectorAll('.vertical.menu a.item[href="'+ window.location.pathname +'"]').forEach((node)=>
		{
			node.className += " active selected";
		})
	</script>
	<script src="vendors/jquery/jquery.min.js"></script>
	<script src="vendors/fomantic-ui/semantic.min.js"></script>
	<script src="js/main.js"></script>
   {% block endbody %}{% endblock %}
	
</html>
